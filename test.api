GRAPHQL http://localhost:8080/graphql

query  {
    getPost(postId: 1) {
        postId
        eventId
        content
        createdAt
        updatedAt
        creatorId
        creatorUsername
        creatorFullName
        creatorAvatar
        commentCount
        likeCount

        listComment(page: 0, size: 10) {
            pageInfo {
                page
                size
                totalElements
                totalPages
                hasNext
                hasPrevious
            }
            content {
                commentId
                postId
                content
                createdAt
                updatedAt
                creatorId
                creatorFullName
                creatorUsername
                creatorAvatar
                commentCount
                likeCount
            }
        }
    }
}


